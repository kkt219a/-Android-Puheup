<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/miniactivity2">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:hint="ex) 김x태"
            android:layout_weight="5"
            android:background="#e6e6e6"
            android:singleLine="true"
            android:maxLength="5"
            android:layout_marginTop="91dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp" />

        <EditText
            android:id="@+id/et_money"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:hint="ex)35000"
            android:background="#e6e6e6"
            android:singleLine="true"
            android:maxLength="10"
            android:inputType="number"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/et_name"
            android:layout_alignLeft="@+id/et_name"
            android:layout_alignStart="@+id/et_name" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:hint="ex)밥값"
            android:singleLine="true"
            android:maxLength="6"
            android:background="#e6e6e6"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/et_money"
            android:layout_alignLeft="@+id/et_money"
            android:layout_alignStart="@+id/et_money" />

        <EditText
            android:id="@+id/et_day"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:hint="ex)20161201"
            android:background="#e6e6e6"
            android:inputType="number"
            android:maxLength="8"
            android:singleLine="true"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/et_content"
            android:layout_alignLeft="@+id/et_content"
            android:layout_alignStart="@+id/et_content" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="추가"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:background="@drawable/location_search_off"
            android:layout_alignBaseline="@+id/button07"
            android:layout_alignBottom="@+id/button07"
            android:layout_toLeftOf="@+id/button07"
            android:layout_toStartOf="@+id/button07" />

        <Button
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button07"
            android:textColor="#ffffff"
            android:onClick="onClick2"
            android:background="@drawable/location_search_off"
            android:layout_below="@+id/et_day"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</LinearLayout>
